{{!< default}}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

{{!-- If the Post has a tag "Img", create cover image --}}
{{#has tag="Img"}}
<header class="postHeader">
        <div class="postHeader-wrapper">
        <div class="postHeader-content">
            <h1 class="postTitle">{{{title}}}</h1>
            {{!-- <p class="subline">Inspiration for Article Intro Effects</p> --}}
            <p>by <strong>{{author.name}}</strong> &#8212; Posted on <strong>{{date format="MMMM, DD YYYY"}}</strong></p>
        </div>
    </div>
</header>

<script>
    $(document).ready(function() {

        // Add the bg-img and remove first image
        var img = $("#post").find('img:first'),
        url = img.attr('src');
        // $(".postHeader").append("<div class='bg-img'><img src='"+url+"'></div>")
        $(".postHeader-wrapper").append("<div class='bg-img' style='background-image: url("+url+"); background-position: 50% 50%'></div>")
        img.remove();

    });
</script>
{{/has}}


<article id="post" class="{{post_class}} ">

    <div class="post-wrapper l-singleColumn">
    
        <section class="postContent">
            <h1 class="post-title">{{{title}}}</h1>
            <div>{{content}}</div>
        </section>
    
    
        <div class="post-meta l-singleColumn">
            <div class="post-date u-text-center"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time></div>
            
        </div>
        <footer class="post-footer">
    
            <section class="author">
                <h4>{{author.name}}</h4>
                <p>{{author.bio}}</p>
                <ul class="author-meta clearfix">
                    {{#if author.location}}<li>{{author.location}}</li>{{/if}}
                    {{#if author.website}}<li><a href="{{author.website}}">{{author.website}}</a></li>{{/if}}
                </ul>
            </section>
    
            <section class="share">
                <h4>Share this post</h4>
                <a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>
            </section>
    
        </footer>
    </div>

</article>

    {{/post}}
