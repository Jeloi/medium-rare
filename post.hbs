{{!< default}}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

{{!-- If the Post has a tag "Img", create cover image --}}
{{#has tag="Img"}}
<header class="postHeader">
        <div class="postHeader-wrapper">
        <div class="postHeader-content">
            <h1 class="postHeader-title">{{{title}}}</h1>
            {{!-- <p class="subline">Inspiration for Article Intro Effects</p> --}}
            <p>{{author.name}} on {{date format="MMMM, DD YYYY"}}</p>
        </div>
    </div>
</header>
<div id="postHeader-waypoint"></div>

<script>
    $(document).ready(function() {

        // Add the bg-img and remove first image
        var img = $("#post").find('img:first'),
        url = img.attr('src');
        // $(".postHeader").append("<div class='bg-img'><img src='"+url+"'></div>")
        $(".postHeader-wrapper").append("<div class='bg-img' style='background-image: url("+url+"); background-position: 50% 50%'></div>")
        img.remove();
        $('.postContent-title').remove();
        $('.topMenu').addClass('is-overImage');

    });
</script>
{{/has}}


<article id="post" class="{{post_class}} ">

    <div class="post-wrapper l-singleColumn">
    
        <section class="postContent">
            <h1 class="postContent-title">{{{title}}}</h1>
            <div class="postContent-body">{{content}}</div>

            <section class="postContent-share">
                <a class="symbol" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="">twitterbird</span>
                </a>
                <a class="symbol" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="">facebook</span>
                </a>
                <a class="symbol" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="">googleplus</span>
                </a>
            </section>

        </section>
    
    

        <footer class="postFooter">
            <section class="postFooter-card bucket">
                <div class="bucket-label">Written by</div>
                <div class="author-image" style="background-image: url({{author.image}})"></div>
                <div class="bucket-content bucket-content--padded">
                    <h6 class="author-name">
                        <a href="{{@blog.url}}/me">{{author.name}}</a>
                    </h6>
                    <p class="author-bio">{{author.bio}}</p>
                    <hr>
                    <div class="published">Published on {{date format="MMMM, DD YYYY"}}</div>
                </div>

            </section>

            <section class="postFooter-card bucket">
                <div class="bucket-label">More From Me</div>
                <div class="bucket-content">
                    <p class="author-bio">
                        If you would like to hear more of my tips and musings, or about the products I create, please subscribe to my <a href="">newsletter</a>. 
                        <br><br>
                        Receive one email a week. Unsubscribe at any time.
                    </p>
                </div>
            </section>
    

    
        </footer>
    </div>

</article>

    {{/post}}
